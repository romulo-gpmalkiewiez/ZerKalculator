<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_result"
        style="@style/Visor_Result"
        android:text="" />

    <TextView
        android:id="@+id/txt_expression"
        style="@style/Visor_Expression"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_percent"
            style="@style/Button_Default"
            android:text="%" />

        <Button
            android:id="@+id/btn_open_parenthesis"
            style="@style/Button_Default"
            android:text="(" />

        <Button
            android:id="@+id/btn_close_parenthesis"
            style="@style/Button_Default"
            android:text=")" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/Button_Operator"
            android:text="\u00F7" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/Button_Default"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/Button_Default"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/Button_Default"
            android:text="9" />

        <Button
            android:id="@+id/btn_times"
            style="@style/Button_Operator"
            android:text="\u00D7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/Button_Default"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/Button_Default"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/Button_Default"
            android:text="6" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/Button_Operator"
            android:text="\u2212" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/Button_Default"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/Button_Default"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/Button_Default"
            android:text="3" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/Button_Operator"
            android:text="\u002b" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/Button_Default"
            android:text="0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/Button_Default"
            android:text="." />

        <Button
            android:id="@+id/btn_backspace"
            style="@style/Button_Default"
            android:text="\u232b" />

        <Button
            android:id="@+id/btn_equal"
            style="@style/Button_Equal"
            android:text="=" />
    </LinearLayout>

</LinearLayout>