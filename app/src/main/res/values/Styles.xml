<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Visor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:background">@color/visor_bg_color</item>
        <item name="android:textColor">@color/visor_text_color</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Visor_Result" parent="Visor">
        <item name="android:textSize">68sp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Visor_Expression" parent="Visor">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button_Container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item> <!-- centralize text -->
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Button_Default" parent="Button_Container">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:backgroundTint">@color/btn_bg_color</item>
    </style>

    <style name="Button_Operator" parent="Button_Container">
        <item name="android:textColor">@color/btn_operator_text_color</item>
        <item name="android:backgroundTint">@color/btn_operator_bg_color</item>
    </style>

    <style name="Button_Equal" parent="Button_Container">
        <item name="android:textColor">@color/btn_equal_text_color</item>
        <item name="android:backgroundTint">@color/btn_equal_bg_color</item>
    </style>

</resources>